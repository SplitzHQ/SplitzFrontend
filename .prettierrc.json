{
  "$schema": "https://json.schemastore.org/prettierrc",
  "importOrder": ["<THIRD_PARTY_MODULES>", "^@/", "^[./]"],
  "importOrderSeparation": true,
  "jsonRecursiveSort": true,
  "objectWrap": "preserve",
  "plugins": ["prettier-plugin-tailwindcss", "@trivago/prettier-plugin-sort-imports", "prettier-plugin-sort-json"],
  "printWidth": 120,
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "tailwindFunctions": ["twJoin", "twMerge"],
  "tailwindStylesheet": "./src/assets/base.css",
  "trailingComma": "none"
}
